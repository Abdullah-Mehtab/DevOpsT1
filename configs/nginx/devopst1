server {
    listen 80;
    server_name _;

    root /var/www/devopst1/public;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    # optional: small security headers (basic)
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options SAMEORIGIN;
}
